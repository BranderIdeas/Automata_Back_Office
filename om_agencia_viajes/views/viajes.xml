<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="om_agencia_viajes_viajes">
            <field name="name">om_agencia_viajes.viajes</field>
            <field name="model">om_agencia_viajes.viajes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="viaje_code"/>
                    <field name="viaje_places"/>
                    <field name="viaje_origin"/>
                    <field name="viaje_destiny"/>
                    <field name="viaje_date"/>
                    <field name="viaje_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="om_agencia_viajes_viajes_form">
            <field name="name">om_agencia_viajes.viajes.form</field>
            <field name="model">om_agencia_viajes.viajes</field>
            <field name="arch" type="xml">
                <form string="Viajes">
                    <header>
                        <button name="action_cancel" type="object" states="avalaible"
                                string="Cancelar" class="oe_highlight"/>
                        <button name="action_activate" type="object" states="canceled"
                                string="Activar" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="viaje_code" readonly="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Datos del Viaje" name="datos_viaje">
                                <group>
                                <field name="viaje_places"/>
                                <field name="viaje_date" widget="date"/>
                                <field name="viaje_origin"/>
                                <field name="viaje_destiny"/>
                                <field name="viaje_price"/>
                                </group>
                            </page>
                            <page string="Datos Viajeros" name="viajero_viajes">
                                <field name="viajeros_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- search -->
        <record model="ir.ui.view" id="om_agencia_viajes_viajes_search">
            <field name="name">om_agencia_viajes.viajes.search</field>
            <field name="model">om_agencia_viajes.viajes</field>
            <field name="arch" type="xml">
                <search>
                    <field name="viaje_code"/>
                    <field name="viaje_origin"/>
                    <field name="viaje_destiny"/>
                    <field name="viaje_origin" string="Origen o Destino" filter_domain="['|',('viaje_origin','ilike',self),('viaje_destiny','ilike',self)]"/>
                    <filter string="Disponible" name="state" domain="[('state', '=', 'avalaible')]"/>
                    <filter string="Viajes futuros" name="viaje_date" domain="[('viaje_date', '&gt;', context_today().strftime('%Y/%m/%d'))]"/>
                    <filter string="Viajes pasados" name="viaje_date" domain="[('viaje_date', '&lt;', context_today().strftime('%Y/%m/%d'))]"/>
                    <filter string="Con plazas" name="viaje_places" domain="[('viaje_places', '&gt;', 0)]"/>
                    <filter string="Sin plazas" name="viaje_places" domain="[('viaje_places', '&lt;', 1)]"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="om_agencia_viajes_viajes">
            <field name="name">om_agencia_viajes.viajes</field>
            <field name="res_model">om_agencia_viajes.viajes</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_state': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    NingÃºn Viaje!
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Agencia de Viajes" id="agencia_viajes_root"/>

        <!-- menu categories -->
        <menuitem name="Viajes" id="agencia_viajes_viajes" parent="agencia_viajes_root" action="om_agencia_viajes_viajes"/>
    </data>
</odoo>