<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="res_partner_inherit">
            <field name="name">res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="viajero_name"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="viajeros_view">
            <field name="name">viajeros.view</field>
            <field name="model">om_agencia_viajes.viajeros</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="viajero_document"/>
                    <field name="viajero_name"/>
                    <field name="viajero_address"/>
                    <field name="viajero_phone"/>
                </tree>
            </field>
        </record>

        <!-- search -->
        <record model="ir.ui.view" id="om_agencia_viajes.viajeros_search">
            <field name="name">om_agencia_viajes.viajeros.search</field>
            <field name="model">om_agencia_viajes.viajeros</field>
            <field name="arch" type="xml">
                <search>
                    <field name="viajero_name" string="Viajeros" filter_domain="['|',('viajero_name','ilike',self),('viajero_document','ilike',self)]"/>
                    <field name="viajero_phone"/>
                    <field name="viajero_address"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="oe_agencia_viajes_viajeros_form">
            <field name="name">oe_agencia_viajes.viajeros.form</field>
            <field name="model">om_agencia_viajes.viajeros</field>
            <field name="arch" type="xml">
                <form string="Viajeros">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_btn_smart" class="oe_stat_button" type="object" icon="fa-plane">
                                <span class="o_stat_text"> Viajes </span>
                                <field name="viajes_count"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="viajero_name" readonly="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Datos" name="datos_viajero">
                                <group>
                                    <field name="viajero_document"/>
                                    <field name="viajero_name"/>
                                    <field name="viajero_address"/>
                                    <field name="viajero_phone"/>
                                </group>
                            </page>
                            <page string="Viajes" name="viajes_viajero">
                                <field name="viajes_id"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="om_agencia_viajes_viajeros">
            <field name="name">om_agencia_viajes.viajeros</field>
            <field name="res_model">om_agencia_viajes.viajeros</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    NingÃºn Viajero!
                </p>
            </field>
        </record>

        <!-- menu categories -->
        <menuitem name="Viajeros" id="agencia_viajes_viajeros" parent="agencia_viajes_root" action="om_agencia_viajes_viajeros"/>
    </data>
</odoo>