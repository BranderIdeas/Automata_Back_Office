<odoo>
    <data>

        <!-- tree -->
        <record model="ir.ui.view" id="crm_states_tenders_view">
            <field name="name">crm_states_tenders.view</field>
            <field name="model">om_automata_licitaciones.crm_states_tenders</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- search -->
        <record model="ir.ui.view" id="om_automata_licitaciones.crm_states_tenders_search">
            <field name="name">om_automata_licitaciones.crm_states_tenders.search</field>
            <field name="model">om_automata_licitaciones.crm_states_tenders</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- form -->
        <record model="ir.ui.view" id="oe_automata_licitaciones_crm_states_tenders_form">
            <field name="name">om_automata_licitaciones.crm_states_tenders.form</field>
            <field name="model">om_automata_licitaciones.crm_states_tenders</field>
            <field name="arch" type="xml">
                <form string="Estados de Licitación">
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name"/>
                            </h3>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="om_automata_licitaciones_crm_states_tenders">
            <field name="name">Estados de Licitación</field>
            <field name="res_model">om_automata_licitaciones.crm_states_tenders</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ningún registro de Estados de Licitación
                </p>
            </field>
        </record>

        <!-- menu item -->
        <menuitem id="crm_states_tenders_menu_item" 
                  name="Estados de Licitación"
                  parent="om_automata_licitaciones.crm_menu_tender"
                  action="om_automata_licitaciones_crm_states_tenders"
                  sequence="12"/>
        
    </data>
</odoo>