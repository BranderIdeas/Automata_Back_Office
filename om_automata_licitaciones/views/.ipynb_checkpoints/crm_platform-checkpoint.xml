<odoo>
    <data>

        <!-- tree -->
        <record model="ir.ui.view" id="crm_platform_view">
            <field name="name">crm_platform.view</field>
            <field name="model">om_automata_licitaciones.crm_platform</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- search -->
        <record model="ir.ui.view" id="om_automata_licitaciones.crm_platform_search">
            <field name="name">om_automata_licitaciones.crm_platform.search</field>
            <field name="model">om_automata_licitaciones.crm_platform</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- form -->
        <record model="ir.ui.view" id="oe_agencia_viajes_crm_platform_form">
            <field name="name">om_automata_licitaciones.crm_platform.form</field>
            <field name="model">om_automata_licitaciones.crm_platform</field>
            <field name="arch" type="xml">
                <form string="Plataforma">
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name"/>
                            </h3>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="om_automata_licitaciones_crm_platform">
            <field name="name">Plataforma</field>
            <field name="res_model">om_automata_licitaciones.crm_platform</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ning√∫n registro de plataforma
                </p>
            </field>
        </record>

        <!-- menu item -->
        <menuitem id="crm_platform_menu_item" 
                  name="Plataforma"
                  parent="crm.menu_crm_config_lead"
                  action="om_automata_licitaciones_crm_platform"
                  sequence="10"/>
        
    </data>
</odoo>