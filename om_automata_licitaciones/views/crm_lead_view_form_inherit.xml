<odoo>
  <data>
      
    <!-- Inserta el tab de Info LicitaciÃ³n y los campos de Objeto y Motivo de NO PRESENTADA -->
    <record model="ir.ui.view" id="crm_lead_view_form_inherit">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='193']" position="after">
                <button name="193" string="Marcar como no presentada" type="action" class="oe_highlight" />
<!--                         context="{'default_lead_id': active_id}" 
                        attrs="{'invisible': ['|', ('type', '=', 'lead'),('active', '=', False),('probability', '&lt;', 100)]}"/> -->
            </xpath>
            <xpath expr="//page[@name='lead']" position="after">
                <page string="Info. LicitaciÃ³n" name="info_tender">
                    <group name="info_group">
                        <group name="info_">
                            <field name="link"/>
                            <field name="pay_method"/>
                        </group>
                        <group name="info_right">
                            <field name="dead_line"/>
                            <field name="platform" options="{'no_create_edit':True, 'no_create': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="object"/>
                <field name="motive_of_no_presentated_id" invisible="1"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="before">
                <field name="state_tender_id" invisible="1"/>
                <widget name="web_ribbon" bg_color="bg-secondary" title="Borrador" attrs="{'invisible': [('state_tender_id', '!=', 1)]}"/>
                <widget name="web_ribbon" bg_color="bg-info" title="Convocado" attrs="{'invisible': [('state_tender_id', '!=', 2)]}"/>
            </xpath> 
          </field>
    </record>
      
    <!-- menu item -->
    <menuitem id="crm_menu_tender"
              name="Licitaciones"
              parent="crm.crm_menu_root"
              sequence="30"/>
      
  </data>
</odoo>